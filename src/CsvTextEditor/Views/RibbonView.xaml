<catel:UserControl x:Class="CsvTextEditor.Views.RibbonView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:CsvTextEditor.Views"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:fluent="urn:fluent-ribbon"
                   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls"
                   xmlns:orchestra="http://schemas.wildgums.com/orchestra"
                   xmlns:csvTextEditor="clr-namespace:CsvTextEditor"
                   xmlns:orctheming="http://schemas.wildgums.com/orc/theming"
                   mc:Ignorable="d"
                   d:DesignHeight="300"
                   d:DesignWidth="300">

    <fluent:Ribbon x:Name="ribbon"
                   IsQuickAccessToolBarVisible="False"
                   CanCustomizeRibbon="False"
                   AutomaticStateManagement="False">
        <fluent:Ribbon.Menu>
            <fluent:Backstage Header="File">
                <fluent:BackstageTabControl>
                    <fluent:BackstageTabItem Header="Open">
                        <local:OpenFileView />
                    </fluent:BackstageTabItem>

                    <fluent:Button Header="Save"
                                   Command="{catel:CommandManagerBinding File.Save}" />

                    <fluent:Button Header="Save As"
                                   Command="{catel:CommandManagerBinding File.SaveAs}" />
                </fluent:BackstageTabControl>
            </fluent:Backstage>
        </fluent:Ribbon.Menu>

        <fluent:Ribbon.Tabs>
            <fluent:RibbonTabItem Header="View">
                <fluent:RibbonGroupBox Header="File">

                    <fluent:Button Header="Save"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Save}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding File.Save}" />


                    <fluent:SplitButton Header="Open in editor"
                                        LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Edit}, FontFamily=FontAwesome}"
                                        Command="{catel:CommandManagerBinding File.OpenInTextEditor}"
                                        IsEnabled="{Binding IsActiveProjectExists}">
                        <fluent:Gallery ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <fluent:Button Header="Excel"
                                           LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.FileExcelO}, FontFamily=FontAwesome}"
                                           Command="{catel:CommandManagerBinding File.OpenInExcel}"/>
                        </fluent:Gallery>
                    </fluent:SplitButton>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Edit">
                    <fluent:Button Header="Copy"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Copy}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.Copy}" />

                    <fluent:Button Header="Cut"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Cut}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.Cut}" />

                    <fluent:Button Header="Paste"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Paste}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.Paste}" />

                    <fluent:Button Header="Undo"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.MailReply}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.Undo}" />

                    <fluent:Button Header="Redo"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.MailForward}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.Redo}" />

                    <fluent:Button x:Name="FindAndReplaceButton" Header="Find and replace"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Search}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Edit.FindReplace}" />

                    <fluent:SplitButton Header="Quick Format" LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.AlignJustify}, FontFamily=FontAwesome}" IsEnabled="{Binding ElementName=FindAndReplaceButton, Path=IsEnabled}">
                        <fluent:MenuItem Header="Remove blank lines" Icon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Remove}}" Command="{catel:CommandManagerBinding Edit.RemoveBlankLines}" />
                        <fluent:MenuItem Header="Remove duplicate lines" Icon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Remove}}" Command="{catel:CommandManagerBinding Edit.RemoveDuplicateLines}" />
                        <fluent:MenuItem Header="Trim whitespaces" Icon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.AlignJustify}}" Command="{catel:CommandManagerBinding Edit.TrimWhitespaces}" />
                    </fluent:SplitButton>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Settings">
                    <fluent:Button Header="Settings"
                                   LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.Cog}, FontFamily=FontAwesome}"
                                   Command="{catel:CommandManagerBinding Settings.General}" />

                    <fluent:SplitButton Header="Shortcuts"
                                        LargeIcon="{orctheming:FontImage {x:Static csvTextEditor:FontAwesome.KeyboardO}, FontFamily=FontAwesome}"
                                        Command="{Binding ShowKeyboardMappings}" >
                        <orchestra:KeyboardMappingsOverviewView />
                    </fluent:SplitButton>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Highlight">
                    <local:FindView Margin="2,10,2,2"/>
                </fluent:RibbonGroupBox>

                <fluent:RibbonGroupBox Header="Statistic"
                                       Visibility="{Binding Project, Converter={catel:ReferenceToCollapsingVisibilityConverter}}">
                    <local:ProjectStatisticView Margin="2,10,2,2"/>
                </fluent:RibbonGroupBox>

            </fluent:RibbonTabItem>
        </fluent:Ribbon.Tabs>
    </fluent:Ribbon>
</catel:UserControl>